{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "@console-capture/shared": ["./packages/shared/src"],
      "@console-capture/backend": ["./packages/backend/src"],
      "@console-capture/mcp-local": ["./packages/mcp-local/src"],
      "@console-capture/mcp-cloud": ["./packages/mcp-cloud/src"]
    }
  },
  "exclude": ["node_modules", "dist", "build", "coverage"]
}
